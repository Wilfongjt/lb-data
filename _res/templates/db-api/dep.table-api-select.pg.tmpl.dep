-- Select
---------

CREATE OR REPLACE FUNCTION
[[LB_DB_PREFIX]]_schema.[[api-name]](_token text, id int) RETURNS TEXT
AS $$
  DECLARE rc TEXT;
  DECLARE secret TEXT;
  DECLARE rc_form JSONB;
BEGIN

  -- returns a single user's info
  -- need to figure out postgres environment variables

  rc := '{"result":-1}';

  if [[LB_DB_PREFIX]]_schema.is_valid_token(_token) then

    select
    '{' || [[select-columns]] || '}'
    into rc_from
    [[LB_DB_PREFIX]]_schema.[[tbl-name]]
    where [[tbl-prefix]]_id=id;

    if rc is NULL then
      rc := '{"result":-1}';
    end if;
  end if;

  RETURN rc;
END;  $$ LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION
  [[LB_DB_PREFIX]]_schema.[[api-name]](
  [[select-parameter-types]]
  ) TO anonymous;


